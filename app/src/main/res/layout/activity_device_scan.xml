<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/device_scan_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/device_scan_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!-- Floating window enable and close -->
        <Button
            android:id="@+id/btnStartService"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Overlay Service"/>
        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnStartService"
            android:layout_toRightOf="@+id/btnStartService"
            android:text="Close Activity"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>